<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/backform">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#0B4059"
        android:id="@+id/emailLoh"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Please Insert!"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#FFF"/>

            <EditText
                android:layout_marginTop="38dp"
                android:layout_gravity="center"
                android:background="@drawable/field"
                android:id="@+id/u_name"
                android:hint="Nama User"
                android:textAlignment="center"
                android:width="200dp"
                android:layout_width="293dp"
                android:layout_height="52dp"
                android:layout_column="2"
                />

            <EditText
                android:id="@+id/u_email"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/field"
                android:hint="Email"
                android:textAlignment="center"
                android:width="200dp"
                android:layout_width="293dp"
                android:layout_height="52dp"
                android:layout_column="2"
                />

            <EditText
                android:id="@+id/u_hobi"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/field"
                android:hint="Hobi"
                android:textAlignment="center"
                android:width="200dp"
                android:layout_width="293dp"
                android:layout_height="52dp"
                android:layout_column="2"
                />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300sp"
        android:layout_marginTop="20sp">
        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="350sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:background="@drawable/btn_all"
            android:text="Save"
            android:onClick="saveRecord"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:background="@drawable/btn_all"
            android:text="Update"
            android:onClick="updateRecord"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_all"
            android:text="Delete"
            android:onClick="deleteRecord"/>
    </LinearLayout>
</LinearLayout>